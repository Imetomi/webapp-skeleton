{
  "collectionName": "components_shared_seos",
  "info": {
    "displayName": "SEO",
    "description": "Search Engine Optimization metadata"
  },
  "options": {},
  "attributes": {
    "metaTitle": {
      "type": "string",
      "required": true,
      "maxLength": 60
    },
    "metaDescription": {
      "type": "text",
      "required": true,
      "maxLength": 160
    },
    "metaKeywords": {
      "type": "text"
    },
    "metaRobots": {
      "type": "string",
      "default": "index, follow"
    },
    "canonicalURL": {
      "type": "string"
    },
    "ogTitle": {
      "type": "string",
      "maxLength": 60
    },
    "ogDescription": {
      "type": "text",
      "maxLength": 160
    },
    "ogImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "twitterTitle": {
      "type": "string",
      "maxLength": 60
    },
    "twitterDescription": {
      "type": "text",
      "maxLength": 160
    },
    "twitterImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "twitterCardType": {
      "type": "enumeration",
      "enum": ["summary", "summary_large_image", "app", "player"],
      "default": "summary_large_image"
    },
    "structuredData": {
      "type": "json"
    }
  }
} 