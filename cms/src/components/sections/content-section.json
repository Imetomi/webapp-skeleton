{
  "collectionName": "components_sections_content_sections",
  "info": {
    "displayName": "Content Section",
    "description": "Structured content sections for articles"
  },
  "options": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "media": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images", "videos", "files"]
    },
    "layout": {
      "type": "enumeration",
      "enum": [
        "standard",
        "wide",
        "full-width",
        "two-column",
        "media-left",
        "media-right",
        "media-center"
      ],
      "default": "standard"
    },
    "backgroundColor": {
      "type": "string",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
    },
    "anchor": {
      "type": "string",
      "regex": "^[a-z0-9-]+$"
    },
    "callToAction": {
      "type": "component",
      "component": "shared.call-to-action",
      "repeatable": false
    }
  }
} 