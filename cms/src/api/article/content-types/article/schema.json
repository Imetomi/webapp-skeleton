{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": "Create and manage SEO-optimized blog articles"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "summary": {
      "type": "text",
      "maxLength": 300,
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"],
      "required": true
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::author.author",
      "inversedBy": "articles"
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "inversedBy": "articles"
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "inversedBy": "articles"
    },
    "publishDate": {
      "type": "datetime"
    },
    "updateDate": {
      "type": "datetime"
    },
    "readingTime": {
      "type": "integer",
      "min": 1,
      "default": 5
    },
    "seo": {
      "type": "component",
      "component": "shared.seo",
      "required": false
    },
    "relatedArticles": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::article.article"
    },
    "sections": {
      "type": "component",
      "repeatable": true,
      "component": "sections.content-section"
    },
    "tableOfContents": {
      "type": "boolean",
      "default": true
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "allowComments": {
      "type": "boolean",
      "default": true
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images"]
    },
    "references": {
      "type": "component",
      "repeatable": true,
      "component": "shared.reference"
    }
  }
} 